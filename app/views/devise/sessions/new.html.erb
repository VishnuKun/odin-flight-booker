<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: label_class %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
    </div>

    <div class="field">
      <%= f.label :password, class: label_class  %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: input_class %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: input_class %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

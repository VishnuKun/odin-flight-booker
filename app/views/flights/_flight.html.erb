<div id="<%= dom_id flight %>">
  <% if action_name != "show" %>
    <div class="border-solid border-2 border-indigo-600 rounded-lg p-2">
      <h1>Flight : <%=flight.id %> </h1>
      <p>Departure Airport: <%= flight.departure_airport.code %></p>
      <p>Arrival Airport: <%= flight.arrival_airport.code %></p>
      <p>Start Date and Time: <%= flight.start_datetime %></p>
      <p>Duration: <%= flight.flight_duration %> minutes</p>
      <%= link_to "Show this flight", flight, class: form_button_class %>
    </div>
    <%# <%= link_to "Edit this flight", edit_flight_path(flight), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %> 
    <hr class="mt-6">
  <% end %>
</div>
